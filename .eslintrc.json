{
  "parserOptions": {
    "ecmaVersion": 2017
  },
  "plugins": [
        "security",
        "promise",
        "mocha",
        "jsdoc"
    ],
    "env": {
        "es6": true,
        "node": true,
        "mocha": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:node/recommended",
        "jquery",
        "plugin:security/recommended",
        "plugin:promise/recommended",
        "plugin:mocha/recommended",
        "plugin:jsdoc/recommended"
    ],
    "rules": {
        "max-len": [
            "error",
            {
              "code": 90,
              "tabWidth": 2,
              "ignoreStrings": true,
              "ignoreComments": true
            }
        ],
        "no-return-await": 0,
        "capitalized-comments": "warn"
    }
}
